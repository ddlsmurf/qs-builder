<%= make_table(:auto_rowspan => true) do
  cols = %w[pane1 pane2 pane3 reqs notes].map(&:to_sym)
  template_row = { :style_for => {} }
  cols.each do |c|
    template_row[c] = ""
    column c
  end
  header_row ["Pane 1", "Pane 2", "Pane 3", "Extra Requirements", "Notes"]
  rows.each do |r|
    r = template_row.merge(r)
    if emph = r.delete(:emphasis)
      r[:style_for] = r[:style_for].merge("pane#{emph}".to_sym => { :header => true, :align => :left })
    end
    #cols.any? {|c| r[c]}
    row r
  end
end %>
